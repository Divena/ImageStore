@using ImageStore.Models
@using Microsoft.AspNet.Identity
@model IEnumerable<Category>

@foreach (var link in Model)
{
    @Html.RouteLink(link.Name, new
{
    controller = "Home",
    action = "List",
    category = link.CategoryID,
    page = 1,
    userid = ViewBag.currentuser
}, new
{
    @class = "btn btn-block btn-default btn-lg"
     + (link.CategoryID == ViewBag.SelectedCategory ? " btn-primary" : "")
})
}